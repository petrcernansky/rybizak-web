---
import { getEntry, getCollection } from 'astro:content';

const homepageData = await getEntry('homepage', 'data');
const settings = homepageData?.data || {};
// --- LOGIKA PRO INFORMA캛N칈 LITU ---
const today = new Date();
today.setHours(0, 0, 0, 0); // Vynulujeme 캜as, porovn치v치me jen dny

const showBanner = (() => {
    // 1. Pokud nen칤 text, nezobrazovat
    if (!settings.infoBannerText) return false;

    // 2. Kontrola data OD
    if (settings.infoBannerStart) {
        const startDate = new Date(settings.infoBannerStart);
        if (today < startDate) return false; // Je코t캩 nenastal 캜as
    }

    // 3. Kontrola data DO
    if (settings.infoBannerEnd) {
        const endDate = new Date(settings.infoBannerEnd);
        if (today > endDate) return false; // U je po term칤nu
    }

    return true; // Pro코lo v코emi kontrolami
})();
const benefity = await getCollection('benefits');
let menuList = await getCollection('menus');
const personal = await getCollection('staff');
const plakaty = await getCollection('concerts');

// Se콏azen칤 menu podle priority (men코칤 캜칤slo = v칳코e)
menuList.sort((a, b) => (a.data.priority || 99) - (b.data.priority || 99));
