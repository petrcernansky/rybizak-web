                        <div class="flex-1 min-w-[300px] max-w-[450px] flex flex-col items-center group cursor-pointer">
                            
                            <h3 class="text-xl font-bold text-gray-800 mb-8 uppercase tracking-widest border-b-2 border-[#45225e] pb-2 inline-block">
                                {menu.data.title}
                            </h3>
                            
                            <div class="relative w-full aspect-[1/1.4] perspective-1000">
                                
